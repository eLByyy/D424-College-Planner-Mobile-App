<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="src.Views.EditTerm"
             Title="Edit Term">

    <VerticalStackLayout Padding="20" Spacing="20">

        <Label Text="Term Name" FontSize="18" />
        <Entry x:Name="TermNameEntry" Placeholder="Enter term name" />

        <Label Text="Start Date" FontSize="18" />
        <DatePicker x:Name="StartDatePicker" />

        <Label Text="End Date" FontSize="18" />
        <DatePicker x:Name="EndDatePicker" />

        <StackLayout Padding="0,200,0,20" Spacing="15">
            <Button Text="Save" TextColor="White" Clicked="Save_OnClicked"/>
            <Button Text="Cancel" BackgroundColor="Gray" TextColor="White" Clicked="Cancel_OnClicked"/>
        </StackLayout>

    </VerticalStackLayout>

</ContentPage>