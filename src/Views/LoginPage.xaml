<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="src.Views.LoginPage"
             >

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="⚙️ Settings" 
                     Clicked="Settings_OnClicked"
                     
                     />
    </ContentPage.ToolbarItems>

    <VerticalStackLayout Padding="40" Spacing="20">

        <Label Text="Welcome"
               FontSize="32"
               HorizontalOptions="Center"/>

        <Entry x:Name="UsernameEntry"
               Placeholder="Username"
               Margin="0,50,0,0"/>

        <Entry x:Name="PasswordEntry"
               Placeholder="Password" IsPassword="True"/>

        <Button Text="Login" 
                Clicked="OnLoginClicked"
                />

        <Button Text="Create Account" Clicked="OnCreateAccountClicked"/>

        <Label Text="Need an account?"
               HorizontalOptions="Center"
               Margin="0,-12,0,0"
               FontSize="12"/>

    </VerticalStackLayout>
</ContentPage>
    
